<stage name="Creating directories and mounting file systems">

	<mkdir base="&LFS;">
		<option>parents</option>
		<name>dev</name>
		<name>proc</name>
		<name>sys</name>
	</mkdir>

	<execute command="mount">
		<param>-t proc</param>
		<param>proc</param>
		<param>&LFS;/proc</param>
	</execute>

	<execute command="mount">
		<param>-t sysfs</param>
		<param>sysfs</param>
		<param>&LFS;/sys</param>
	</execute>

	<stage name="Create permanent /dev/console and /dev/null.">
   		<execute command="mknod">
			<param>-m 600</param>
			<param>/dev/console</param>
			<param>c 5 1</param>
		</execute>
		
		<execute command="mknod">
			<param>-m 666</param>
			<param>/dev/null</param>
			<param>c 1 3</param>
		</execute>
	</stage>

	<execute command="mount">
		<param>--bind</param>
		<param>/dev</param>
		<param>&LFS;/dev</param>
	</execute>

	<execute command="mount">
		<param>-f</param>
		<param>-t devpts</param>
		<param>-o gid=4,mode=620</param>
		<param>devpts</param>
		<param>&LFS;/dev/pts</param>
	</execute>

	<execute command="mount">
		<param>-f</param>
		<param>-t tmpfs</param>
		<param>tmpfs</param>
		<param>&LFS;/dev/shm</param>
	</execute>
</stage>
