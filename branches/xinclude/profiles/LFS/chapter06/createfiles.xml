%general_entities;
%package_entities;
]>

<alfs>

<stage name="Creating essential symlinks.">
	<link>
		<option>force</option>
		<target>/tools/bin/bash</target>
		<target>/tools/bin/cat</target>
		<target>/tools/bin/pwd</target>
		<target>/tools/bin/stty</target>
		<name>/bin</name>
	</link>

	<link>
		<option>force</option>
		<target>/tools/bin/perl</target>
		<name>/usr/bin</name>
	</link>

	<link>
		<option>force</option>
		<target>/tools/lib/libgcc_s.so.1</target>
		<name>/usr/lib</name>
	</link>

	<link>
		<option>force</option>
		<target>bash</target>
		<name>/bin/sh</name>
	</link>
</stage>

</alfs>
