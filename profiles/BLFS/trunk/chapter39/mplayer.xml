        <name>divx4linux</name>
      </utilizes>
      <utilizes>
        <name>toolame</name>
      </utilizes>
      <utilizes>
        <name>lirccd</name>
      </utilizes>
      <utilizes>
        <name>lirc</name>
      </utilizes>
    </packageinfo>
    <stage name="Unpacking">
      <unpack>
        <digest>&mplayer-md5;</digest>
	<archive>&packages_dir;/&mplayer-package;</archive>
        <destination>&build_dir;</destination>
      </unpack>
    </stage>
    <stage name="Patching">
      <stageinfo>
	<base>&build_dir;/&mplayer-directory;</base>
      </stageinfo>
      <patch>
        <param>-N</param>
        <param>-p1</param>
        <param>-i &packages_dir;/&mplayer-patch;</param>
      </patch>
    </stage>
    <stage name="Installing">
      <stageinfo>
        <environment>
          <variable name="CFLAGS"></variable>
        </environment>
        <base>&build_dir;/&mplayer-directory;</base>
      </stageinfo>
      <mkdir>
        <name>/usr/lib/mplayer/codecs</name>
      </mkdir>
      <unpack>
        <digest>&mplayer-codecs-md5;</digest>
	<archive>&packages_dir;/&mplayer-codecs-package;</archive>
        <destination>/usr/lib/mplayer/codecs</destination>
      </unpack>
      <ownership user="root" group="root">
        <option>recursive</option>
        <name>/usr/lib/mplayer/codecs</name>
      </ownership>
      <mkdir>
        <name>/usr/lib/mplayer/Skin</name>
      </mkdir>
      <unpack>
        <digest>&mplayer-skin-md5;</digest>
	<archive>&packages_dir;/&mplayer-skin-package;</archive>
        <destination>/usr/lib/mplayer/Skin</destination>
      </unpack>
      <ownership user="root" group="root">
        <option>recursive</option>
        <name>/usr/share/mplayer/Skin/Blue</name>
      </ownership>
      <permissions mode="0755">
        <name>/usr/share/mplayer/Skin/Blue</name>
        <name>/usr/share/mplayer/Skin/Blue/icons</name>
      </permissions>
      <link type="symbolic">
        <option>force</option>
        <target>Blue</target>
        <name>/usr/share/mplayer/Skin/default</name>
      </link>
      <configure>
        <param>--prefix=/usr</param>
        <param>--confdir=/etc/mplayer</param>
        <param>--enable-largefiles</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
      <mkdir>
        <name>/usr/share/doc/mplayer-&mplayer-version;</name>
      </mkdir>
      <copy>
        <option>recursive</option>
        <source>DOCS/*</source>
        <destination>/usr/share/doc/mplayer-&mplayer-version;</destination>
      </copy>
      <link>
      	<option>force</option>
	<target>libdha.so.1.0</target>
	<name>/usr/lib/libdha.so</name>
      </link>
      <copy>
        <source>etc/codecs.conf</source>
        <destination>/etc/mplayer</destination>
      </copy>
      <copy>
	<source>etc/*.conf</source>
	<destination>/etc/mplayer</destination>
      </copy>
      <textdump mode="append">
	<file>/etc/sysctl.conf</file>
	<content>
	  =dev.rtc.max-user-freq=1024
	</content>
      </textdump>
      <unpack>
        <digest>&mplayer-font-md5;</digest>
	<archive>&packages_dir;/&mplayer-font-package;</archive>
        <destination>/usr/share/mplayer/font</destination>
      </unpack>
      <ownership user="root" group="root">
        <option>recursive</option>
        <name>/usr/share/mplayer/font</name>
      </ownership>
      <link base="/usr/share/mplayer/font">
        <option>force</option>
        <target>font-arial-iso-8859-1/font-arial-&mplayer-font-size;-iso-8859-1/*</target>
        <name>.</name>
      </link>
    </stage>
    <stage name="Cleanup">
      <remove>&build_dir;/&mplayer-directory;</remove>
    </stage>
  </package>
</alfs>
