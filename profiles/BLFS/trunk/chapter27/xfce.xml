<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE alfs SYSTEM "../DTD/ALFS.dtd"
[
<!ENTITY % general_entities SYSTEM "../config/general.ent">
<!ENTITY % package_entities SYSTEM "../config/packages/ch27.ent">
<!ENTITY % config_entities SYSTEM  "../config/config.ent">

%general_entities;
%package_entities;
%config_entities;

]>
<alfs>
  <package name="xfce" version="&xfce-version;">
    <packageinfo>
      <requires>
        <name>gtk+2</name>
      </requires>
      <requires>
        <name>libxml2</name>
      </requires>
      <utilizes>
        <name>libgtkhtml</name>
      </utilizes>
      <utilizes>
        <name>startup-notification</name>
      </utilizes>
      <utilizes>
      	<name>a2ps</name>
      </utilizes>
      <utilizes>
	<name>psutils</name>
      </utilizes>
    </packageinfo>
    <stage name="Unpacking">
      <unpack>
        <archive>&packages_dir;/&xfce-package;</archive>
        <destination>&build_dir;</destination>
      </unpack>
      <unpack>
        <archive>&build_dir;/&xfce-directory;/src-bz2/&xfce-libxfce4util-package;</archive>
        <destination>&build_dir;/&xfce-directory;/src-bz2</destination>
      </unpack>
      <unpack>
        <archive>&build_dir;/&xfce-directory;/src-bz2/&xfce-libxfcegui4-package;</archive>
        <destination>&build_dir;/&xfce-directory;/src-bz2</destination>
      </unpack>
      <unpack>
        <archive>&build_dir;/&xfce-directory;/src-bz2/&xfce-libxfce4mcs-package;</archive>
        <destination>&build_dir;/&xfce-directory;/src-bz2</destination>
      </unpack>
      <unpack>
        <archive>&build_dir;/&xfce-directory;/src-bz2/&xfce-xfcemcsmanager-package;</archive>
        <destination>&build_dir;/&xfce-directory;/src-bz2</destination>
      </unpack>
      <unpack>
        <archive>&build_dir;/&xfce-directory;/src-bz2/&xfce-xfwm4-package;</archive>
        <destination>&build_dir;/&xfce-directory;/src-bz2</destination>
      </unpack>
      <unpack>
        <archive>&build_dir;/&xfce-directory;/src-bz2/&xfce-xfdesktop-package;</archive>
        <destination>&build_dir;/&xfce-directory;/src-bz2</destination>
      </unpack>
      <unpack>
        <archive>&build_dir;/&xfce-directory;/src-bz2/&xfce-xfce4panel-package;</archive>
        <destination>&build_dir;/&xfce-directory;/src-bz2</destination>
      </unpack>
      <unpack>
        <archive>&build_dir;/&xfce-directory;/src-bz2/&xfce-xfceutils-package;</archive>
        <destination>&build_dir;/&xfce-directory;/src-bz2</destination>
      </unpack>
    </stage>
    <stage name="Installing">
      <stageinfo>
        <base>&build_dir;/&xfce-directory;/src-bz2/&xfce-libxfce4util-directory;</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Installing">
      <stageinfo>
        <base>&build_dir;/&xfce-directory;/src-bz2/&xfce-libxfcegui4-directory;</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Installing">
      <stageinfo>
        <base>&build_dir;/&xfce-directory;/src-bz2/&xfce-libxfce4mcs-directory;</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Installing">
      <stageinfo>
        <base>&build_dir;/&xfce-directory;/src-bz2/&xfce-xfcemcsmanager-directory;</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Installing">
      <stageinfo>
        <base>&build_dir;/&xfce-directory;/src-bz2/&xfce-xfwm4-directory;</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Installing">
      <stageinfo>
        <base>&build_dir;/&xfce-directory;/src-bz2/&xfce-xfdesktop-directory;</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
        <param>--sysconfdir=/etc</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Installing">
      <stageinfo>
        <base>&build_dir;/&xfce-directory;/src-bz2/&xfce-xfce4panel-directory;</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
        <param>--sysconfdir=/etc</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Installing">
      <stageinfo>
        <base>&build_dir;/&xfce-directory;/src-bz2/&xfce-xfceutils-directory;</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
        <param>--sysconfdir=/etc</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Cleanup">
      <remove>&build_dir;/&xfce-directory;</remove>
    </stage>
  </package>
</alfs>
