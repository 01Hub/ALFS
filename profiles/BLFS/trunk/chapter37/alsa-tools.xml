<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE alfs SYSTEM "../DTD/ALFS.dtd"
[
<!ENTITY % general_entities SYSTEM "../config/general.ent">
<!ENTITY % package_entities SYSTEM "../config/packages/ch37.ent">
<!ENTITY % config_entities SYSTEM  "../config/config.ent">

%general_entities;
%package_entities;
%config_entities;

]>
<alfs>
  <package name="alsa-tools" version="&alsa-tools-version;">
    <packageinfo>
      <requires>
        <name>alsa-lib</name>
      </requires>
      <utilizes>
        <name>gtk+</name>
      </utilizes>
      <utilizes>
        <name>fltk</name>
      </utilizes>
    </packageinfo>
    <stage name="Unpacking">
      <unpack>
        <digest>&alsa-tools-md5;</digest>
	<archive>&packages_dir;/&alsa-tools-package;</archive>
        <destination>&build_dir;</destination>
      </unpack>
    </stage>
    <stage name="Installing ac3dec">
      <stageinfo>
        <base>&build_dir;/&alsa-tools-directory;/ac3dec</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Installing as10k1">
      <stageinfo>
        <base>&build_dir;/&alsa-tools-directory;/as10k1</base>
      </stageinfo>
      <execute command="sed">
	<param>-i</param>
	<param>-e "s/^next_cli_arg:/&real-amp;\n\n\tbreak;/"</param>
	<param>as10k1.c</param>
      </execute>
      <configure>
        <param>--prefix=/usr</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Installing envy24control">
      <stageinfo>
        <base>&build_dir;/&alsa-tools-directory;/envy24control</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Installing sb16_csp">
      <stageinfo>
        <base>&build_dir;/&alsa-tools-directory;/sb16_csp</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Installing sbiload">
      <stageinfo>
        <base>&build_dir;/&alsa-tools-directory;/seq/sbiload</base>
      </stageinfo>
      <configure>
        <param>--prefix=/usr</param>
      </configure>
      <make />
      <make>
        <param>install</param>
      </make>
    </stage>
    <stage name="Cleanup">
      <remove>&build_dir;/&alsa-tools-directory;</remove>
    </stage>
  </package>
</alfs>
