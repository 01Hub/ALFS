    <xi:include href="chapter09/libxml2.xml" />
    <xi:include href="chapter09/nALFS.xml" />
    <remove>/tools</remove>
    <textdump>
      <file>/etc/lfs-release</file>
      <content>=&LFS-version;</content>
    </textdump>
  </stage>
