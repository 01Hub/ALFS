srcdir       := @top_srcdir@/src/lib
top_builddir := @top_builddir@
include $(top_builddir)/Rules.mak

CFLAGS += -fPIC

.PHONY: all

all: $(NALFS_LIB)

$(NALFS_LIB): $(O_FILES)
	$(AR) cr $@ $^
	$(RANLIB) $@

$(O_FILES): %.o: $(srcdir)/%.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $< -o $@

.PHONY: clean distclean

clean:
	$(RM) $(O_FILES) $(NALFS_LIB)

distclean:
	$(RM) Makefile
