<package name="librep" version="&librep-version;">

    <packageinfo>
        <requires><name>gmp</name></requires>
	<requires><name>gdbm</name></requires>
        <utilizes><name>readline</name></utilizes>
    </packageinfo>



	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&librep-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&librep-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
			<param>--libexec=/usr/lib</param>
			<param>--mandir=/usr/share/man</param>
			<param>--infodir=/usr/share/info</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
		
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&librep-directory;</remove>
	</stage>

</package>
