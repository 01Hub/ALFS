<package name="gnome-games" version="&gnome-games-version;">

        <packageinfo>
                <requires><name>libgnomeui</name></requires>
		<requires><name>scrollkeeper</name></requires>
		<requires><name>librsvg</name></requires>
		<utilizes><name>esound</name></utilizes>
		<utilizes><name>guile</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&gnome-games-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&gnome-games-directory;</base>
		</stageinfo>

		<mkdir>
			<name>/var/lib/games</name>
		</mkdir>

		<execute command="groupadd -f games" />

		<execute command="grep -q ^games /etc/passwd">
			<param>|| useradd</param>
			<param>-c 'games'</param>
			<param>-d /var/lib/games</param>
			<param>-g games</param>
			<param>-s /bin/false</param>
			<param>games</param>
		</execute>

		<configure>
			<param>--prefix=`pkg-config --variable=prefix ORBit-2.0`</param>
			<param>--localstatedir=/var/lib</param>
			<param>--sysconfdir=/etc/gnome</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&gnome-games-directory;</remove>
	</stage>

</package>
