<package name="epiphany" version="&epiphany-version;">

        <packageinfo>
                <requires><name>libgnomeui</name></requires>
                <requires><name>scrollkeeper</name></requires>
		<requires><name>mozilla</name></requires>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&epiphany-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&epiphany-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=`pkg-config --variable=prefix ORBit-2.0`</param>
			<param>--sysconfdir=/etc/gnome</param>
			<param>--localstatedir=/var/lib</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&epiphany-directory;</remove>
	</stage>

</package>
