<package name="yelp" version="&yelp-version;">

        <packageinfo>
                <requires><name>libgnomeui</name></requires>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&yelp-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&yelp-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=&gnome-prefix;</param>
			<param>--libexecdir=&gnome-prefix;/sbin</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&yelp-directory;</remove>
	</stage>

</package>
