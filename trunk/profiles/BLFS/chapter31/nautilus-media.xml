<package name="nautilus-media" version="&nautilus-media-version;">

        <packageinfo>
                <requires><name>gstreamer</name></requires>
		<requires><name>nautilus</name></requires>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&nautilus-media-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&nautilus-media-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=`pkg-config --variable=prefix ORBit-2.0`</param>
			<param>--libexecdir=`pkg-config --variable=prefix ORBit-2.0`/sbin</param>
			<param>--sysconfdir=/etc/gnome</param>
			<param>--localstatedir=/var/lib</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&nautilus-media-directory;</remove>
	</stage>

</package>
