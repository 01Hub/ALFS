<package name="zenity" version="&zenity-version;">

        <packageinfo>
                <requires><name>intltool</name></requires>
		<requires><name>popt</name></requires>
		<requires><name>libgnomecanvas</name></requires>
		<requires><name>scrollkeeper</name></requires>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&zenity-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&zenity-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=`pkg-config --variable=prefix ORBit-2.0`</param>
			<param>--localstatedir=/var/lib</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&zenity-directory;</remove>
	</stage>

</package>
