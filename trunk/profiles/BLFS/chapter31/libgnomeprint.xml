<package name="libgnomeprint" version="&libgnomeprint-version;">

        <packageinfo>
		<requires><name>pango</name></requires>
                <requires><name>fontconfig</name></requires>
                <requires><name>libart-lgpl</name></requires>
		<requires><name>libxml2</name></requires>
		<utilizes><name>cups</name></utilizes>
		<utilizes><name>gtk-doc</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&libgnomeprint-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&libgnomeprint-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=`pkg-config --variable=prefix ORBit-2.0`</param>
			<param>--sysconfdir=/etc/gnome</param>
			<param>--disable-gtk-doc</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

		<execute command="/sbin/ldconfig" />
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&libgnomeprint-directory;</remove>
	</stage>

</package>
