<?xml version="1.0" encoding="ISO-8859-1"?>

<package name="skel" version ="1.0">

<stage name="Building /etc/skel.">

<mkdir>
        <option>parents</option>
	<name>/etc/default</name>
</mkdir>

<textdump base="/etc/default">
        <file>useradd</file>
	<content>
                =# Begin /etc/default/useradd
                =
                =GROUP=100
                =HOME=/home
                =INACTIVE=-1
                =EXPIRE=
                =SHELL=/bin/bash
                =SKEL=/etc/skel
                =
                =# End /etc/default/useradd
	</content>
</textdump>

<mkdir>
        <option>parents</option>
	<name>/etc/skel</name>
</mkdir>

<copy>
        <source>&blfs-config;/home/skel/.bash_profile</source>
	<destination>/etc/skel</destination>
</copy>

<copy>
        <source>&blfs-config;/home/skel/.bash_logout</source>
	<destination>/etc/skel</destination>
</copy>

<copy>
        <source>&blfs-config;/home/skel/.bashrc</source>
	<destination>/etc/skel</destination>
</copy>

</stage>

</package>
