<package name="xmms" version="&xmms-version;">

        <packageinfo>
                <requires><name>xfree86</name></requires>
        	<requires><name>gtk+</name></requires>
        	<requires><name>glib</name></requires>
		<utilizes><name>esound</name></utilizes>
		<utilizes><name>gnomelibs</name></utilizes>
		<utilizes><name>gnomeapplets</name></utilizes>
		<utilizes><name>libmikmod</name></utilizes>
		<utilizes><name>libogg</name></utilizes>
		<utilizes><name>libvorbis</name></utilizes>
		<utilizes><name>libxml</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&xmms-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&xmms-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
			<param>--enable-one-plugin-dir</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&xmms-directory;</remove>
	</stage>

</package>
