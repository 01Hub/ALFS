<package name="cdrdao" version="&cdrdao-version;">

        <packageinfo>
	    <utilizes><name>lame</name></utilizes>
	    <utilizes><name>gtk+</name></utilizes>
	    <utilizes><name>gnome-libs</name></utilizes>
	    <utilizes><name>gtkmm</name></utilizes>
	    <utilizes><name>gnomemm</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&cdrdao-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&cdrdao-directory;</base>
		</stageinfo>

		<configure>
		        <param>--prefix=/usr</param>
		</configure>

		<make/>
		
		<make>
			<param>install</param>
		</make>
		
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&cdrdao-directory;</remove>
	</stage>

</package>
