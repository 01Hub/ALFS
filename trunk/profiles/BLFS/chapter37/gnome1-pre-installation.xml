<?xml version="1.0" encoding="ISO-8859-1"?>

<package name="gnome1-pre-installation" version ="1.0">

<stage name="GNOME 1 pre-installation.">


<textdump base="/root">
        <file>.bash_profile</file>

        <content>
	        =export PATH=$PATH:/opt/gnome/bin/bin
		=export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/opt/gnome/lib/pkgconfig
        </content>
</textdump>

<textdump base="/etc" mode="append">
        <file>ld.so.conf</file>

        <content>
	        =# Begin gnome 1 addition to /etc/ld.so.conf
		=
		=/opt/gnome/lib
		=
		=# End gnome 1 addition
        </content>
</textdump>



<textdump base="/etc" mode="append">
        <file>man.conf</file>

        <content>
	        =# Begin gnome 1 addition to man.conf
		=
		=MANPATH /opt/gnome/man
		=
		=# END gnome 1 addition to man.conf
        </content>
</textdump>

<execute command="/sbin/ldconfig" />

</stage>

</package>