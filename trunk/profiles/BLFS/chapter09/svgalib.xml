<package name="svgalib" version="&svgalib-version;">

        <stage name="Unpacking>
		<unpack>
			<archive>&packages_dir;/&svgalib-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<copy>
		        <source>&packages_dir;/&svgalib-gcc3-1-patch;</source>
		        <destination>&build_dir;</destination>
		</copy>
	</stage>

	<stage name="Installing>
		<stageinfo>
			<base>&build_dir;/&svgalib-directory;</base>
		</stageinfo>

		<patch>
			<param>-N</param>
			<param>-p1</param>
			<param>-i ../&svgalib-gcc3-1-patch;</param>
		</patch>

		<make>
			<param>prefix=/usr</param>
			<param>install</param>
		</make>


		<execute command="cd doc &amp;&amp; for dir in man?; do for file in $dir/*; do gunzip /usr/share/man/$file; done; done" />

		<execute command="/sbin/ldconfig" />

	</stage>

	<stage name="Cleanup">
		<remove>&build_dir;/&svgalib-directory;</remove>
		<remove>&build_dir;/&svgalib-gcc3-1-patch;</remove>
	</stage>

</package>
