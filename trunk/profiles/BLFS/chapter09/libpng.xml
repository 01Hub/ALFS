<package name="libpng" version="&libpng-version;">

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&libpng-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
		<copy>
		        <source>&packages_dir;/&libpng-patch;</source>
			<destination>&build_dir;</destination>
		</copy>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&libpng-directory;</base>
		</stageinfo>

		<patch>
			<param>-N</param>
			<param>-p1</param>
			<param>-i ../&libpng-patch;</param>
		</patch>


		<make>
		        <param>prefix=/usr</param>
		        <param>ZLIBINC=/usr/include</param>
		        <param>ZLIBLIB=/usr/lib</param>
		        <param>-f scripts/makefile.linux</param>
		</make>

		<make>
			<param>prefix=/usr</param>
			<param>install</param>
			<param>-f scripts/makefile.linux</param>
		</make>

		<execute command="/sbin/ldconfig" />
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&libpng-directory;</remove>
		<remove>&build_dir;/&libpng-patch;</remove>
	</stage>


</package>

