<package name="libungif" version="&libungif-version;">

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&libungif-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<copy>
			<source>&packages_dir;/&libungif-patch;</source>
			<destination>&build_dir;</destination>
		</copy>

	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&libungif-directory;</base>
		</stageinfo>

		<patch>
			<param>-N</param>
			<param>-p1</param>
			<param>-i ../&libungif-patch;</param>
		</patch>

		<configure>
			<param>--prefix=/usr</param>
		</configure>


	        <make/>

		<make>
			<param>install</param>
		</make>

	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&libungif-directory;</remove>
		<remove>&build_dir;/&libungif-patch;</remove>
	</stage>

</package>

