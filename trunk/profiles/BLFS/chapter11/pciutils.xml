<package name="pciutils" version="&pciutils-version;">

        <packageinfo>
                <requires><name>wget</name></requires>
                <!--requires><name>lynx</name></requires-->
	</packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&pciutils-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&pciutils-directory;</base>
		</stageinfo>

		<make>
			<param>PREFIX=/usr</param>
		</make>

		<make>
			<param>PREFIX=/usr</param>
			<param>install</param>
		</make>
		
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&pciutils-directory;</remove>
	</stage>

</package>
