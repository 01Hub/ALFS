<package name="hdparm" version="&hdparm-version;">

	<stage name="Unpacking">
		<unpack>
			<archive>&packages_dir;/&hdparm-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<copy>
		        <source>&packages_dir;/&hdparm-patch1;</source>
		        <destination>&build_dir;</destination>
		</copy>
	</stage>

	<stage name="Installing">
		<stageinfo>
			<base>&build_dir;/&hdparm-directory;</base>
		</stageinfo>

		<patch>
			<param>-N</param>
			<param>-p1</param>
			<param>-i ../&hdparm-patch1;</param>
		</patch>

		<make/>

		<make>
			<param>binprefix=/usr</param>
			<param>install</param>
		</make>
		
	</stage>

	<stage name="Cleanup">
		<remove>&build_dir;/&hdparm-directory;</remove>
		<remove>&build_dir;/&hdparm-patch1;</remove>
	</stage>

</package>
