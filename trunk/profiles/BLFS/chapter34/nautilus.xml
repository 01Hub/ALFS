<package name="nautilus" version="&nautilus-version;">

        <packageinfo>
                <requires><name>libgnomeui</name></requires>
		<utilizes><name>medusa</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&nautilus-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&nautilus-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=&gnome-prefix;</param>
			<param>--libexecdir=&gnome-prefix;/sbin</param>
			<param>--sysconfdir=/etc/gnome</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

		<execute command="/sbin/ldconfig" />
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&nautilus-directory;</remove>
	</stage>

</package>
