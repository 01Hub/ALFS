<package name="enlightenment" version="&enlightenment-version;">

	<packageinfo>
        	<requires><name>xfree86</name></requires>
                <requires><name>imlib</name></requires>
                <requires><name>fnlib</name></requires>
		<utilizes><name>gtk+</name></utilizes>
		<utilizes><name>esound</name></utilizes>
		<utilizes><name>libghttp</name></utilizes>
	</packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&enlightenment-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&enlightenment-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
			<param>--enable-fsstd</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&enlightenment-directory;</remove>
	</stage>

</package>
