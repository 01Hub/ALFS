<package name="arts" version="&arts-version;">

        <packageinfo>
                <requires><name>qt</name></requires>
		<utilizes><name>alsa</name></utilizes>
		<utilizes><name>audiofile</name></utilizes>
		<utilizes><name>libvorbis</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&arts-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&arts-directory;</base>
		</stageinfo>

		<configure>
		        <param>--prefix=/opt/kde-&kde-version;</param>
			<param>--disable-debug</param>
			<param>--disable-dependency-tracking</param>
		</configure>

		<make/>
		
		<make>
			<param>install</param>
		</make>

		<link>
		        <option>force</option>
			<target>/opt/kde-&kde-version;</target>
			<name>/opt/kde</name>
		</link>

		<textdump mode="append">
		        <file>/etc/ld.so.conf</file>
			<content>
			        =# Begin kde addition to /etc/ld.so.conf
			        =
			        =/opt/kde/lib
			        =
			        =# End kde addition
			</content>
		</textdump>

		<execute command="/sbin/ldconfig" />

	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&arts-directory;</remove>
	</stage>

</package>
