<package name="metacity" version="&metacity-version;">

	<packageinfo>
        	<requires><name>xfree86</name></requires>
        	<requires><name>intltool</name></requires>
        	<requires><name>gtk+2</name></requires>
		<utilizes><name>startup-notification</name></utilizes>
		<utilizes><name>gconf</name></utilizes>
	</packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&metacity-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&metacity-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
			<param>--libexec=/usr/sbin</param>
			<param>--sysconfdir=/etc</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&metacity-directory;</remove>
	</stage>

</package>
