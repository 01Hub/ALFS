<package name="xfce" version="&xfce-version;">

	<packageinfo>
        	<requires><name>xfree86</name></requires>
        	<requires><name>gtk+</name></requires>
        	<requires><name>glib</name></requires>
		<utilizes><name>gdk-pixbuf</name></utilizes>
		<utilizes><name>imlib</name></utilizes>
		<utilizes><name>libpng</name></utilizes>
		<utilizes><name>libjpeg</name></utilizes>
		<utilizes><name>libungif</name></utilizes>
		<utilizes><name>libtiff</name></utilizes>
	</packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&xfce-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&xfce-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
			<param>--datadir=/usr/share</param>
			<param>--sysconfdir=/etc</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&xfce-directory;</remove>
	</stage>

</package>
