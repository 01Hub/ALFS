<package name="libbonobo" version="&libbonobo-version;">

        <packageinfo>
                <requires><name>orbit2</name></requires>
                <requires><name>bonobo-activation</name></requires>
		<utilizes><name>gtk-doc</name></utilizes>
		<utilizes><name>xml-dtd</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&libbonobo-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&libbonobo-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=&gnome-prefix;</param>
			<param>--disable-gtk-doc</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

		<execute command="/sbin/ldconfig" />
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&libbonobo-directory;</remove>
	</stage>

</package>
