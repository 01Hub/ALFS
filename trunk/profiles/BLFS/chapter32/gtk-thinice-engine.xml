<package name="gtk-thinice-engine" version="&gtk-thinice-engine-version;">

        <packageinfo>
                <requires><name>gtk+2</name></requires>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&gtk-thinice-engine-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&gtk-thinice-engine-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&gtk-thinice-engine-directory;</remove>
	</stage>

</package>
