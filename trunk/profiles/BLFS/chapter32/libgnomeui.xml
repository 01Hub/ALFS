<package name="libgnomeui" version="&libgnomeui-version;">

        <packageinfo>
                <requires><name>libgnome</name></requires>
                <requires><name>libgnomecanvas</name></requires>
                <requires><name>libbonoboui</name></requires>
		<utilizes><name>gtk-doc</name></utilizes>
		<utilizes><name>sgml-dtd31</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&libgnomeui-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&libgnomeui-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=&gnome-prefix;</param>
			<param>--libexecdir=&gnome-prefix;/sbin</param>
			<param>--disable-gtk-doc</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

		<execute command="/sbin/ldconfig" />
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&libgnomeui-directory;</remove>
	</stage>

</package>
