<package name="ntp" version="&ntp-version;">

        <packageinfo>
                <utilizes><name>readline</name></utilizes>
                <utilizes><name>openssl</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&ntp-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<unpack>
			<archive>&packages_dir;/&blfs-bootscripts-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&ntp-directory;</base>
		</stageinfo>

		<configure>
		         <param>--prefix=/usr</param>
		         <param>--bindir=/usr/sbin</param>
		         <param>--sysconfdir=/etc</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

		<textdump base="/etc">
		<file>ntp.conf</file>
		<content>
		=server time-a.nist.gov prefer
		=server time-b.nist.gov
		=server tick.usno.navy.mil
		=driftfile /var/cache/ntp.drift
		</content>
		</textdump>
	</stage>

	<stage name="Installing bootscripts">
		<stageinfo>
			<base>&build_dir;/&blfs-bootscripts-directory;</base>
		</stageinfo>

		<make>
			<param>install-ntp</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&ntp-directory;</remove>
		<remove>&build_dir;/&blfs-bootscripts-directory;</remove>
	</stage>
</package>
