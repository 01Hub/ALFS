<package name="portmap" version="&portmap-version;">

        <packageinfo>
                <requires><name>tcpwrappers</name></requires>
        </packageinfo>

	<stage name="Unpacking">
		<unpack>
			<archive>&packages_dir;/&portmap-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<unpack>
			<archive>&packages_dir;/&blfs-bootscripts-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<copy>
			<source>&packages_dir;/&portmap-compilation-fixes-patch;</source>
			<destination>&build_dir;</destination>
		</copy>

		<copy>
			<source>&packages_dir;/&portmap-glibc-errno-fix-patch;</source>
			<destination>&build_dir;</destination>
		</copy>
	</stage>

	<stage name="Installing">
		<stageinfo>
			<base>&build_dir;/&portmap-directory;</base>
		</stageinfo>

		<patch>
			<param>-N</param>
			<param>-p1</param>
			<param>-i ../&portmap-compilation-fixes-patch;</param>
		</patch>

		<patch>
			<param>-N</param>
			<param>-p1</param>
			<param>-i ../&portmap-glibc-errno-fix-patch;</param>
		</patch>

		<make/>

		<make>
			<param>install</param>
		</make>
		
	</stage>

	<stage name="Installing bootscript and configuration">
		<stageinfo>
			<base>&build_dir;/&blfs-bootscripts-directory;</base>
		</stageinfo>

		<make>
			<param>install-portmap</param>
		</make>
	</stage>

	<stage name="Cleanup">
		<remove>&build_dir;/&portmap-directory;</remove>
		<remove>&build_dir;/&portmap-compilation-fixes-patch;</remove>
		<remove>&build_dir;/&portmap-glibc-errno-fix-patch;</remove>
		<remove>&build_dir;/&blfs-bootscripts-directory;</remove>
	</stage>

</package>
