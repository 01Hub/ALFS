<package name="gnucash" version="&gnucash-version;">

        <packageinfo>
                <requires><name>gnome-print</name></requires>
                <requires><name>libglade1</name></requires>
        	<requires><name>db</name></requires>
        	<requires><name>gal</name></requires>
        	<requires><name>libcapplet</name></requires>
        	<requires><name>gtkhtml</name></requires>
        	<requires><name>libghttp</name></requires>
        	<requires><name>bonobo</name></requires>
        	<requires><name>guppi</name></requires>
        	<requires><name>guile</name></requires>
        	<requires><name>slib</name></requires>
        	<requires><name>g-wrap</name></requires>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&gnucash-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&gnucash-directory;</base>
		</stageinfo>

		<execute command="sed 's/^GTKHTML_LIBS.*$/GTKHTML_LIBS=\`pkg-config --libs gtkhtml-1.1\`/' \configure | sed 's/^GTKHTML_CFLAGS.*$/GTKHTML_CFLAGS=\`pkg-config --cflags gtkhtml-1.1\`/' > configure.new &amp;&amp; cp configure.new configure" />

		<configure>
			<param>--prefix=/opt/gnome</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&gnucash-directory;</remove>
	</stage>

</package>
