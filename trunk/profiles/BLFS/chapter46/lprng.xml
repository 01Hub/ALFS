<package name="lprng" version="&lprng-version;">

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&lprng-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&lprng-directory;</base>
		</stageinfo>

		<configure>
		        <param>--prefix=/usr</param>
			<param>--libexecdir=/usr/sbin</param>
			<param>--sysconfdir=/etc</param>
		</configure>

		<!-- to avoid a problem with gcc 3.2 -->
		<search_replace
		    base = "&build_dir;/&lprng-directory;/src">
		        <file>Makefile</file>
			<find>-Werror</find>
			<replace></replace>
		</search_replace>


		<make />

		<make>
			<param>install</param>
		</make>

	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&lprng-directory;</remove>
	</stage>
</package>
