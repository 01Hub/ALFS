<package name="curl" version="&curl-version;">

    <packageinfo>
            <utilizes><name>openssl</name></utilizes>
            <utilizes><name>openldap</name></utilizes>
    </packageinfo>

    <stage name="Unpacking a package.">
	<unpack>
		<archive>&packages_dir;/&curl-package;</archive>
		<destination>&build_dir;</destination>
	</unpack>
    </stage>

    <stage name="Installing a package.">
        <stageinfo>
		<base>&build_dir;/&curl-directory;</base>
	</stageinfo>

	<configure>
	        <param>--prefix=/usr</param>
	</configure>
	
	<make />

	<make>
		<param>install</param>
	</make>
    </stage>

    <stage name="Clean-up.">
	<remove>&build_dir;/&curl-directory;</remove>
    </stage>

</package>
