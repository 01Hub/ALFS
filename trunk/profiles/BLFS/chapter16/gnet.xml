<package name="gnet" version="&gnet-version;">

    <packageinfo>
            <utilizes><name>glib2</name></utilizes>
    </packageinfo>

    <stage name="Unpacking a package.">
	<unpack>
		<archive>&packages_dir;/&gnet-package;</archive>
		<destination>&build_dir;</destination>
	</unpack>
    </stage>

    <stage name="Installing a package.">
        <stageinfo>
		<base>&build_dir;/&gnet-directory;</base>
	</stageinfo>

	<configure>
	        <param>--prefix=/usr</param>
		<param>--enable-glib2</param>
	</configure>
	
	<make />

	<make>
		<param>install</param>
	</make>

	<execute command="/sbin/ldconfig" />
    </stage>

    <stage name="Clean-up.">
	<remove>&build_dir;/&gnet-directory;</remove>
    </stage>

</package>
