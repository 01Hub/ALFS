<package name="atk" version="&atk-version;">

        <packageinfo>
                <requires><name>glib2</name></requires>
		<utilizes><name>gtkdoc</name></utilizes>
		<utilizes><name>gtk-doc</name></utilizes>
		<utilizes><name>xml-dtd</name></utilizes>
		<utilizes><name>docbook-xsl</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&atk-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&atk-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
			<param>--enable-gtk-doc</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&atk-directory;</remove>
	</stage>

</package>
