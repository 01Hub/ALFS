<package name="pango" version="&pango-version;">

        <packageinfo>
                <requires><name>glib2</name></requires>
        	<requires><name>xfree86</name></requires>
		<utilizes><name>qt</name></utilizes>
		<utilizes><name>gtk-doc</name></utilizes>
		<utilizes><name>xml-dtd</name></utilizes>
		<utilizes><name>docbook-xsl</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&pango-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&pango-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
			<param>--sysconfdir=/etc</param>
			<param>--enable-gtk-doc</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&pango-directory;</remove>
	</stage>

</package>
