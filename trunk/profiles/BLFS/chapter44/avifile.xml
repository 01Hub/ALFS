<package name="avifile" version="&avifile-version;">

        <packageinfo>
                <requires><name>qt</name></requires>
                <requires><name>sdl</name></requires>
		<utilizes><name>ffmeg</name></utilizes>
		<utilizes><name>xvid</name></utilizes>
		<utilizes><name>libmad</name></utilizes>
		<utilizes><name>libvorbis</name></utilizes>
		<utilizes><name>lame</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&avifile-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<copy>
			<source>&packages_dir;/&avifile-binaries-package;</source>
			<destination>&build_dir;</destination>
		</copy>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&avifile-directory;</base>
			<environment>
			        <variable name="LD_LIBRARY_PATH" mode="append">:/opt/qt/lib</variable>
			</environment>
		</stageinfo>

		<execute command="install -d /usr/lib/avifile-0.7/win32" />

		<execute command="tar -xzvf ../&avifile-binaries-package; -C /usr/lib/avifile-0.7" />

		<execute command="./autogen.sh" />

		<configure/>

		<make>
		        <param>maintainer-clean</param>
		</make>

		<execute command="./autogen.sh" />

		<configure>
		        <param>--prefix=/usr</param>
			<param>--with-qt-prefix=/opt/qt</param>
			<param>--with-win32-path=/usr/lib/avifile-0.7/win32</param>
		</configure>

		<make />

		<make>
			<param>install</param>
		</make>

	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&avifile-directory;</remove>
	</stage>

</package>
