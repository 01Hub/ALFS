<package name="compface" version="&compface-version;">

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&compface-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<copy>
			<source>&packages_dir;/&compface-errno-2-patch;</source>
			<destination>&build_dir;</destination>
		</copy>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&compface-directory;</base>
		</stageinfo>

		<patch>
			<param>-N</param>
			<param>-p1</param>
			<param>-i ../&compface-errno-2-patch;</param>
		</patch>

		<configure>
			<param>--prefix=/usr</param>
		</configure>

		<make />

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&compface-directory;</remove>
		<remove>&build_dir;/&compface-errno-2-patch;</remove>
	</stage>

</package>
