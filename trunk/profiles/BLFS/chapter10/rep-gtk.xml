<package name="rep-gtk" version="&rep-gtk-version;">

        <packageinfo>
                <requires><name>gtk+2</name></requires>
                <requires><name>librep</name></requires>
                <requires><name>libglade</name></requires>
        </packageinfo>

	<stage name="Unpacking">
		<unpack>
			<archive>&packages_dir;/&rep-gtk-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<copy>
			<source>&packages_dir;/&rep-gtk-gtk2.4-patch;</source>
			<destination>&build_dir;</destination>
		</copy>
	</stage>

	<stage name="Installing">
		<stageinfo>
			<base>&build_dir;/&rep-gtk-directory;</base>
		</stageinfo>

		<patch>
			<param>-N</param>
			<param>-p1</param>
			<param>-i ../&rep-gtk-gtk2.4-patch;</param>
		</patch>

		<configure>
			<param>--prefix=/usr</param>
		</configure>

		<make />

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Cleanup">
		<remove>&build_dir;/&rep-gtk-directory;</remove>
		<remove>&build_dir;/&rep-gtk-gtk2.4-patch;</remove>
	</stage>

</package>
