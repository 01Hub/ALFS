<package name="sdl" version="&sdl-version;">

        <packageinfo>
                <requires><name>alsa-driver</name></requires>
                <requires><name>esound</name></requires>

		<utilizes><name>oss</name></utilizes>
		<utilizes><name>alsa</name></utilizes>
		<utilizes><name>esound</name></utilizes>
		<utilizes><name>arts</name></utilizes>
		<utilizes><name>nas</name></utilizes>
		<utilizes><name>nasm</name></utilizes>
		<utilizes><name>xfree86</name></utilizes>
		<utilizes><name>aalib</name></utilizes>
		<utilizes><name>directfb</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&sdl-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&sdl-directory;</base>
		</stageinfo>

		<configure>
		        <param>--prefix=/usr</param>
		        <param>--disable-debug</param>
		</configure>

		<make/>
		
		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&sdl-directory;</remove>
	</stage>

</package>
