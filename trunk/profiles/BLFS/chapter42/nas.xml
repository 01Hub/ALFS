<package name="nas" version="&nas-version;">

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&nas-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<copy>
		        <source>&packages_dir;/&nas-patch;</source>
			<destination>&build_dir;</destination>
		</copy>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&nas-directory;</base>
		</stageinfo>

		<patch>
			<param>-N</param>
			<param>-p1</param>
			<param>-i ../&nas-patch;</param>
		</patch>

		<execute command="xmkmf" />

		<make>
		        <param>Makefiles</param>
		</make>
		
		<make>
			<param>includes</param>
		</make>

		<make>
			<param>depend</param>
		</make>

		<make />

		<make>
		        <param>INCROOT=/usr/include</param>
			<param>USRLIBDIR=/usr/lib</param>
			<param>MANPATH=/usr/share/man</param>
			<param>BINDIR=/usr/bin</param>
			<param>LIBDIR=/usr/lib</param>
			<param>CONFIGDIR=/usr/X11R6/lib/X11/config</param>
			<param>install</param>
			<param>install.man</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&nas-directory;</remove>
		<remove>&build_dir;/&nas-patch;</remove>
	</stage>

</package>
