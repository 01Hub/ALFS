<package name="at-spi" version="&at-spi-version;">

        <packageinfo>
                <requires><name>gail</name></requires>
                <requires><name>libbonobo</name></requires>
		<utilizes><name>gtk-doc</name></utilizes>
		<utilizes><name>sgml-dtd31</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&at-spi-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<copy>
		        <source>&packages_dir;/&at-spi-patch;</source>
		        <destination>&build_dir;</destination>
		</copy>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&at-spi-directory;</base>
		</stageinfo>

		<patch>
			<param>-N</param>
			<param>-p1</param>
			<param>-i ../&at-spi-patch;</param>
		</patch>

		<configure>
			<param>--prefix=&gnome-prefix;</param>
			<param>--libexecdir=&gnome-prefix;/sbin</param>
			<param>--disable-gtk-doc</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&at-spi-directory;</remove>
		<remove>&build_dir;/&at-spi-patch;</remove>
	</stage>

</package>
