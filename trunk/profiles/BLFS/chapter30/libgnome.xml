<package name="libgnome" version="&libgnome-version;">

        <packageinfo>
                <requires><name>gnome-vfs2</name></requires>
		<utilizes><name>esound</name></utilizes>
                <utilizes><name>gtk-doc</name></utilizes>
       </packageinfo>

	<stage name="Unpacking">
		<unpack>
			<archive>&packages_dir;/&libgnome-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing">
		<stageinfo>
			<base>&build_dir;/&libgnome-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=`pkg-config --variable=prefix ORBit-2.0`</param>
			<param>--libexecdir=`pkg-config --variable=prefix ORBit-2.0`/sbin</param>
			<param>--sysconfdir=/etc/gnome</param>
			<param>--disable-gtk-doc</param>
		</configure>

		<make />

		<make>
			<param>install</param>
		</make>

		<execute command="/sbin/ldconfig" />
	</stage>

	<stage name="Cleanup">
		<remove>&build_dir;/&libgnome-directory;</remove>
	</stage>

</package>
