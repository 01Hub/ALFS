<package name="libcroco" version="&libcroco-version;">

        <packageinfo>
                <requires><name>glib2</name></requires>
                <requires><name>libxml2</name></requires>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&libcroco-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&libcroco-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=`pkg-config --variable=prefix ORBit-2.0`</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&libcroco-directory;</remove>
	</stage>

</package>
