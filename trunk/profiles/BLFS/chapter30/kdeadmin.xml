<package name="kdeadmin" version="&kdeadmin-version;">

        <packageinfo>
                <requires><name>kdebase</name></requires>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&kdeadmin-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&kdeadmin-directory;</base>
		</stageinfo>

		<configure>
                        <param>--prefix=/opt/kde-&kde-version;</param>
                        <param>--disable-debug</param>
                        <param>--disable-dependency-tracking</param>
			<param>--with-shadow</param>
		</configure>

		<make />

		<make>
			<param>install</param>
		</make>

	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&kdeadmin-directory;</remove>
	</stage>

</package>
