<package name="gtk-doc" version="&gtk-doc-version;">

        <packageinfo>
	        <requires><name>openjade</name></requires>
	        <requires><name>libxslt</name></requires>
	        <requires><name>xml-dtd</name></requires>
	        <requires><name>sgml-dtd</name></requires>
	        <requires><name>sgml-dtd31</name></requires>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&gtk-doc-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<copy>
		        <source>&packages_dir;/&png-support-dtd;</source>
			<destination>/usr/share/sgml/docbook/sgml-dtd-3.1</destination>
		</copy>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&gtk-doc-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
		</configure>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&gtk-doc-directory;</remove>
	</stage>

</package>
