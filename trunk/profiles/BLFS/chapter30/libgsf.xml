<package name="libgsf" version="&libgsf-version;">

        <packageinfo>
        	<requires><name>glib2</name></requires>
        	<requires><name>libxml2</name></requires>
		<utilizes><name>gnome-vfs2</name></utilizes>
                <utilizes><name>gtk-doc</name></utilizes>
         </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&libgsf-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&libgsf-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=`pkg-config --variable=prefix ORBit-2.0`</param>
			<param>--disable-gtk-doc</param>
		</configure>

		<make />

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&libgsf-directory;</remove>
	</stage>

</package>
