<package name="gtkhtml" version="&gtkhtml-version;">

        <packageinfo>
                <requires><name>gal</name></requires>
        	<requires><name>libglade1</name></requires>
        	<requires><name>libcapplet</name></requires>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&gtkhtml-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&gtkhtml-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/opt/gnome</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&gtkhtml-directory;</remove>
	</stage>

</package>
