<package name="intltool" version="&intltool-version;">

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&intltool-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&intltool-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
			<param>--mandir=/usr/share/man</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

		<execute command="/sbin/ldconfig" />
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&intltool-directory;</remove>
	</stage>

</package>
