<package name="gail" version="&gail-version;">

        <packageinfo>
                <requires><name>libgnomecanvas</name></requires>
                <utilizes><name>gtk-doc</name></utilizes>
        </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&gail-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&gail-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=`pkg-config --variable=prefix ORBit-2.0`</param>
			<param>--disable-gtk-doc</param>
		</configure>

		<make/>

		<make>
			<param>install</param>
		</make>

		<execute command="/sbin/ldconfig" />
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&gail-directory;</remove>
	</stage>

</package>
