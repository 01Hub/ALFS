<package name="gmp" version="&gmp-version;">

    <packageinfo>
        <utilizes>
	    <name>readline</name>
	</utilizes>
    </packageinfo>

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&gmp-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&gmp-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
			<param>--mandir=/usr/share/man</param>
			<param>--infodir=/usr/share/info</param>
		</configure>

		<make />

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&gmp-directory;</remove>
	</stage>

</package>
