<package name="libfam" version="&libfam-version;">

    <packageinfo>
        <requires>
	    <name>portmap</name>
	</requires>
    </packageinfo>


	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&libfam-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<copy>
		        <source>&packages_dir;/&libfam-patch;</source>
			<destination>&build_dir;</destination>
		</copy>
	</stage>


	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&libfam-directory;</base>
		</stageinfo>

		<patch>
			<param>-N</param>
			<param>-p1</param>
			<param>-i ../&libfam-patch;</param>
		</patch>

		<execute command="libtoolize --force" />
		<execute command="aclocal" />
		<execute command="automake --add-missing" />
		<execute command="autoconf" />

		<configure>
			<param>--prefix=/usr</param>
			<param>--sysconfdir=/etc</param>
		</configure>

		<make />

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&libfam-directory;</remove>
		<remove>&build_dir;/&libfam-patch;</remove>
	</stage>

</package>
