<package name="slang" version="&slang-version;">

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&slang-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&slang-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
		</configure>

		<make />

		<make>
			<param>install</param>
		</make>

		<make>
			<param>elf</param>
		</make>

		<make>
			<param>install-elf</param>
		</make>

		<make>
			<param>install-links</param>
		</make>

		<permissions mode="755">
		        <name>/usr/lib/libslang.so.1.4.9</name>
		</permissions>

		<execute command="/sbin/ldconfig" />
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&slang-directory;</remove>
	</stage>

</package>
