<package name="ispell" version="&ispell-version;">

	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&ispell-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

	</stage>

	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&ispell-directory;</base>
		</stageinfo>

		<execute command='sed -e "s:/usr/local:/usr:g" local.h.linux > local.h' />

		<make />

		<make>
			<param>install</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&ispell-directory;</remove>
	</stage>

</package>
