<package name="libusb" version="&libusb-version;">

   	<packageinfo>
        	<utilizes><name>openjade</name></utilizes>
		<utilizes><name>sgmldtd31</name></utilizes>
	</packageinfo>


	<stage name="Unpacking a package.">
		<unpack>
			<archive>&packages_dir;/&libusb-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>

		<unpack>
			<archive>&packages_dir;/&blfs-bootscripts-package;</archive>
			<destination>&build_dir;</destination>
		</unpack>
	</stage>


	<stage name="Installing a package.">
		<stageinfo>
			<base>&build_dir;/&libusb-directory;</base>
		</stageinfo>

		<configure>
			<param>--prefix=/usr</param>
			<param>--disable-build-docs</param>
		</configure>

		<make />

		<make>
			<param>install</param>
		</make>

		<execute command="grep -q ^usb /etc/group">
			<param>|| groupadd</param>
			<param>-g 15</param>
			<param>usb</param>
		</execute>
	</stage>

	<stage name="Install bootscript">
		<stageinfo>
			<base>&build_dir;/&blfs-bootscripts-directory;</base>
		</stageinfo>

		<make>
			<param>install-usb</param>
		</make>
	</stage>

	<stage name="Clean-up.">
		<remove>&build_dir;/&libusb-directory;</remove>
		<remove>&build_dir;/&blfs-bootscripts-directory;</remove>
	</stage>

</package>
