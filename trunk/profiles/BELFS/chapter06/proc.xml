<stage name="Creating directories and mounting file systems">

	<mkdir base="&BELFS;">
		<option>parents</option>
		<name>proc</name>
		<name>sys</name>
	</mkdir>

	<execute command="mount">
		<param>-t proc</param>
		<param>proc</param>
		<param>&BELFS;/proc</param>
	</execute>

	<execute command="mount">
		<param>-t sysfs</param>
		<param>sysfs</param>
		<param>&BELFS;/sys</param>
	</execute>

	<execute command="mount">
	  <param>-f</param>
		<param>-t ramfs</param>
		<param>ramfs</param>
		<param>&BELFS;/dev</param>
	</execute>

	<execute command="mount">
	  <param>-f</param>
		<param>-t tmpfs</param>
		<param>tmpfs</param>
		<param>&BELFS;/dev/shm</param>
	</execute>

	<execute command="mount">
	  <param>-f</param>
		<param>-t devpts</param>
		<param>-o gid=4,mode=620</param>
		<param>devpts</param>
		<param>&BELFS;/dev/pts</param>
	</execute>
</stage>
