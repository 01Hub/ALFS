<stage name="Creating directories and mounting file systems">

	<mkdir base="&LFS;">
		<option>parents</option>
		<name>proc</name>
		<name>dev/pts</name>
	</mkdir>

	<execute command="mount">
		<param>proc</param>
		<param>/proc</param>
		<param>-t proc</param>
	</execute>

	<execute command="mount">
		<param>devpts</param>
		<param>/dev/pts</param>
		<param>-t devpts</param>
	</execute>
</stage>
